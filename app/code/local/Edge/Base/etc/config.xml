<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Edge_Base>
            <version>1.0.0</version>
        </Edge_Base>
    </modules>
    <frontend>
        <layout>
            <updates>
                <edge>
                    <file>edge.xml</file>
                </edge>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <customer>
                <rewrite>
                    <account_navigation>Edge_Base_Block_Customer_Account_Navigation</account_navigation>
                </rewrite>
            </customer>
        </blocks>
    </global>
    <stores>
        <admin>
            <design>
                <theme>
                    <default>edge</default>
                </theme>
            </design>
        </admin>
    </stores>
</config>