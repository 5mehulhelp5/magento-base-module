        <arguments>
            <argument name="themes" xsi:type="array">
                <item name="adminhtml" xsi:type="string">OuterEdge/backend</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\App\Config">
        <plugin name="OuterEdge_Base::appConfigPlugin" type="OuterEdge\Base\Plugin\Framework\App\Config"/>
    </type>
    <type name="Magento\Backend\Block\Page\Copyright">
        <plugin name="OuterEdge_Base::pageCopyrightPlugin" type="OuterEdge\Base\Plugin\Backend\Block\Page\Copyright"/>
    </type>
</config>
